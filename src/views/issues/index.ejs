<% if (viewData.issues.length) { %>
    <% for (const issue of viewData.issues) { %>
        <div class="issue">
            <img crossorigin="anonymous" src="<%= issue.avatar %>" alt="avatar">
            <h3><%= issue.title %></h3>
            <form method="post" action="./<%= issue.iid %>/close" class="closeButton">
                <input type="hidden" name="iid" value="<%= issue.iid %>" />
                <button type="submit">Close issue</button>
            </form>
        </div>
    <% } } else { %>
        <div class="issue">
            <h2>No Issues</h2>
        </div>
    <% } %>